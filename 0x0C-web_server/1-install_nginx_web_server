#!/usr/bin/env bash
#Bash script that configures a new Ubuntu machine
sudo apt-get update
apt-get -y install nginx
ufw allow 'Nginx HTTP'
mkdir -p /var/www/html
chmod -R 755 /var/www
echo "server {
	listen 80;
	listen [::]:80;
	location / {
		echo "Hello World!";
	}
}" > /etc/nginx/sites-available/default
service nginx restart
